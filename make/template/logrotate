# To use this file move it to /etc/logrotate.d/inspircd

@LOG_DIR@/*.log {
	compress
	create 0644 @USER@ @GROUP@
	dateext
	delaycompress
	missingok
	notifempty
	rotate 8
	weekly
	postrotate
		if [ -d /lib/systemd ]
		then
			if systemctl --quiet is-active inspircd
			then
				systemctl kill --signal HUP inspircd
			fi
		elif [ -x "@SCRIPT_DIR@/inspircd" ]
		then
			"@SCRIPT_DIR@/inspircd" rehash
		fi
	endscript
}
